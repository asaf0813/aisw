		<script>
			function send(){
				var id_view = document.frm.id_view.value;
				var password = document.frm.password.value;
				var password2 = document.frm.password2.value;
				var email = document.frm.emailAdres.value;
				var tel1 = document.frm.Phone1.value;
				var tel2 = document.frm.Phone2.value;
				var tel3 = document.frm.Phone3.value;
				var tel3 = document.frm.Phone3.value;
				var name = document.frm.name.value;

				if(id_view==""){
					alert("아이디를 입력해주세요");
					document.frm.id_view.focus();
					return;
				} else if(password=="") {
					alert("비밀번호를 입력해주세요");
					document.frm.password.focus();
					return;
				} else if(password2=="") {
					alert("비밀번호를 확인해주세요");
					document.frm.password.focus();
					return;
				} else if(name=="") {
					alert("이름을 입력해주세요.");
					document.frm.password.focus();
					return;
				} else {
					if(confirm("가입하시겠습니까?")) {    			 
						document.frm.submit();
					}
				}

				var regExp = /[a-z0-9]{2,}@[a-z0-9-]{2,}\.[a-z0-9]{2,}/i;

				if(!regExp.test(email)){
					alert("이메일 형식이 일치하지 않습니다.");
					document.frm.emailAdres.focus();
					return;
				}

				var tel1Chk = /^0(2|1[01679])$/;
				var tel2Chk = /^[0-9]{3,}$/;
				var tel3Chk = /^[0-9]{4}$/;

				if (tel1.value != '') {
					if (!tel1Chk.test(tel1)){
						alert("번호형식이 일치하지 않습니다.");
						document.frm.Phone1.focus();
						return;
					}
					if (!tel2Chk.test(tel2)){
						alert("번호형식이 일치하지 않습니다.");
						document.frm.Phone2.focus();
						return;
					}
					if (!tel3Chk.test(tel3)){
						alert("번호형식이 일치하지 않습니다.");
						document.frm.Phone3.focus();
						return;
					}
				}
			}

		</script>
