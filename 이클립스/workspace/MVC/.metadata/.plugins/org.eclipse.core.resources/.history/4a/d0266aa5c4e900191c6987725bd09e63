<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardMapper">
<!-- 게시물 등록 - SQL 정의 -->
    <insert id="insertBoard" parameterType="Board">
       INSERT INTO
         board (
            board_id
              , title
              , contents
              , creater
              , create_date
              , read_count
         )
      VALUE
         (
            (SELECT IFNULL(MAX(b.board_id), 0) + 1 FROM board b)
              , #{title}
              , #{contents}
              , #{creater}
              , NOW()
              , 0
         )
    </insert>
    
    <!-- 게시물 목록 조회 - SQL 정의 -->
    <select id="getBoardList" resultType="Board">
       SELECT
         board_id AS boardId
          , title
          , contents
          , creater
          , DATE_FORMAT(create_date, '%Y-%m-%d %p %h시 %i분') AS createDate
          , updater
          , DATE_FORMAT(update_date, '%Y-%m-%d %p %h시 %i분') AS updateDate
          , read_count AS readCount
      FROM
         board
    </select>
    
    <!-- 게시물 정보 조회 - SQL 정의 -->
    <select id="getBoardInfo" parameterType="int" resultType="Board">
       SELECT
         board_id AS boardId
          , title
          , contents
          , creater
          , DATE_FORMAT(create_date, '%Y-%m-%d %p %h시 %i분') AS createDate
          , updater
          , DATE_FORMAT(update_date, '%Y-%m-%d %p %h시 %i분') AS updateDate
          , read_count AS readCount
      FROM
         board
      WHERE
         board_id = #{boardId}
    </select>
    
    <!-- 게시물 수정 - SQL 정의 -->
    <update id="updateBoard" parameterType="Board">
       UPDATE
         board
      SET
         title = #{title}
         , contents = #{contents}
          , updater = #{updater}
          , update_date = NOW()
      WHERE
         board_id = #{boardId}
    </update>
    
    <!-- 게시물 삭제 - SQL 정의 -->
    <delete id="deleteBoard" parameterType="int">
       DELETE
      FROM
         board
      WHERE
         board_id = #{boardId}
    </delete>
    
    <!--  게시물 조회수 카운터 - SQL 정의 -->    
</mapper>
       