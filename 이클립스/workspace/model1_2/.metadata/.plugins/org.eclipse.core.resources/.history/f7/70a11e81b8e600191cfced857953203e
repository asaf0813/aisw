<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%@ page import="model1.vo.Board_edu" %>  
<%@ page import="model1.dao.Board_eduDAO" %>

<%
 
   //현재 페이지로 요청한 title, contents, updater
   String title = request.getParameter("title");
   String contents = request.getParameter("contents");
   String creater = request.getParameter("creater");
   
   //게시판 Object(객체) 생성
   Board_edu vo = new Board_edu();
   vo.setTitle(title);
   vo.setContents(contents);
   vo.setCreater(creater);

   //게시판의 DataAccessObject(DAO) 객체 생성
   Board_eduDAO dao = new Board_eduDAO();
   //게시물 수정
   dao.insertBoard(vo);

%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>등록수행</title>
</head>
<body>
	<script>
		alert("등록완료")  // 경고창 뜨고 확인버튼 누르면 페이지이동
		window.location.href = "/list.jsp";
	</script>
</body>
</html>